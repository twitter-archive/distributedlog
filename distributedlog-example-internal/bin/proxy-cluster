#!/bin/bash

BASEDIR=$(dirname "$0")
DISTRIBUTEDLOG_ROOT="${BASEDIR}/../.."

SERVICE_PORT=8000
ADMIN_PORT=9000

cd ${DISTRIBUTEDLOG_ROOT} &&\
mvn clean install -pl distributedlog-example-internal -am -DskipTests &&\
BUILT_JAR=`ls distributedlog-service-internal/target/distributedlog-*.jar 2> /dev/null | egrep -v 'tests|javadoc|sources' | tail -1` &&
LOG4J_CONF="$(pwd)/distributedlog-example/conf/log4j.properties"
DL_CLASSPATH=".:distributedlog-example-internal/lib/*:$BUILT_JAR:`dirname $LOG4J_CONF`"
java -cp $DL_CLASSPATH \
    -Dlog4j.configuration=distributedlog-example/conf/log4j.properties \
    -DstatsHttpPort=9000 -DstatsExport=true \
    -Dserver_shard=0 \
    com.twitter.distributedlog.example.TwitterProxyClusterEmulator\$Main \
    -p $SERVICE_PORT \
    -admin.port=":$ADMIN_PORT" \
    -c distributedlog-example/conf/distributedlog.conf \
    -sc distributedlog-example/conf/stream_config \
    -bkconf distributedlog-example/conf/bk_server.conf
