#!/bin/bash

BASEDIR=$(dirname "$0")
DISTRIBUTEDLOG_ROOT="${BASEDIR}/../.."

set -e
shopt -s dotglob

cd ${DISTRIBUTEDLOG_ROOT}
rm -rf distributedlog-internal/distributedlog-benchmark-internal/lib
rm -rf dist/distributedlog-benchmark*
mkdir -p dist/distributedlog-benchmark/{conf,lib}
mvn clean install -Ptwitter-ostrich-provider -pl distributedlog-internal/distributedlog-benchmark-internal -am -DskipTests
cp -rf distributedlog-benchmark/conf/* dist/distributedlog-benchmark/conf
cp -rf distributedlog-internal/distributedlog-benchmark-internal/lib/* dist/distributedlog-benchmark/lib
cp -rf distributedlog-internal/distributedlog-benchmark-internal/target/distributedlog-benchmark-*.jar dist/distributedlog-benchmark
cd dist
zip -r distributedlog-benchmark.zip distributedlog-benchmark >/dev/null
