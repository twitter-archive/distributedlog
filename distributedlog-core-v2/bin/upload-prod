#!/bin/bash

BASEDIR=$(dirname "$0")
DISTRIBUTEDLOG_ROOT="${BASEDIR}/../.."
METADATA="branch=`git status | sed -n 's/.*On branch \(.*\)/\1/p'` sha=`git rev-parse HEAD` $3"

set -e
cd ${DISTRIBUTEDLOG_ROOT}
packer add_version --cluster=atla --metadata="${METADATA}"\
    distributedlog distributedlog_stream_reader_v2 dist/distributedlog-core-v2.zip
packer add_version --cluster=smf1 --metadata="${METADATA}"\
    distributedlog distributedlog_stream_reader_v2 dist/distributedlog-core-v2.zip
