#!/bin/bash

BASEDIR=$(dirname "$0")
DISTRIBUTEDLOG_ROOT="${BASEDIR}/../.."

SERVICE_PORT=8000
ADMIN_PORT=9000

cd ${DISTRIBUTEDLOG_ROOT} &&\
mvn clean install -pl distributedlog-service-internal -am -DskipTests &&\
BUILT_JAR=`ls distributedlog-service-internal/target/distributedlog-*.jar 2> /dev/null | egrep -v 'tests|javadoc|sources' | tail -1` &&
LOG4J_CONF="$(pwd)/distributedlog-example/conf/log4j.properties"
DL_CLASSPATH=".:distributedlog-service-internal/lib/*:$BUILT_JAR:`dirname $LOG4J_CONF`"
java -cp $DL_CLASSPATH \
    -Dlog4j.configuration=log4j.properties \
    -DstatsHttpPort=9000 -DstatsExport=true \
    -Dserver_shard=0 \
    com.twitter.distributedlog.service.DistributedLogTwitterServer\$Emulator \
    -p $SERVICE_PORT \
    -admin.port=":$ADMIN_PORT"
